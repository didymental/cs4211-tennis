        updateP2Fatigue;
        ball=3;
      } -> if (p2_fatigue >P2_STAMINA) { p2_stroke_error } else { Ply1_ad_stroke }
    p2_16 * p2_fatigue * p2_fatigue: Error {
        updateP2Fatigue;
        ball=9;
      } -> p2_stroke_error
  };

