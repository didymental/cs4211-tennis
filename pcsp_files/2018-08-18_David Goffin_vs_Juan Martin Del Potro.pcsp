        } -> Ply1_de_stroke
		p2_5: ServeToMid{
          ball=2;
        } -> Ply1_mid_stroke
		p2_6: Serve_err{
          ball=9;
        } -> Ndoublefault{
            p1score++;
            if (p1score == end_score) {won = player1}
            else { turn = (turn+1)%4}
          } -> NextPt
      };
     
Ad_Ply2Serve = pcase {
		p2_7: ServeToMid{
