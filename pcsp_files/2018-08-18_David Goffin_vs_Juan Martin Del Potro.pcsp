		p2_8: ServeToAd{
          ball=3;
        } -> Ply1_ad_stroke
		p2_9: Serve_err{
          ball=9;
        } -> Ad_Ply2Serve_2nd
      };

Ad_Ply2Serve_2nd = pcase {                 //1st serve is out
		p2_10: ServeToMid{
